{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":enableVulnerabilityAlertsWithLabel(security)"
  ],
  "timezone": "Australia/Brisbane",
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "description": "Automatically merge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Security updates - high priority, separate PRs",
      "matchDatasources": [
        "*"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "prPriority": 10,
      "groupName": null
    },
    {
      "description": "Group Go dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Go dependencies"
    },
    {
      "description": "Pin major versions for review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update"
      ]
    },
    {
      "description": "Ignore all updates for recycler image",
      "matchPackageNames": [
        "ghcr.io/theonlyway/recycler"
      ],
      "enabled": false
    }
  ]
}
