{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Australia/Brisbane",
  "baseBranchPatterns": [
    "main"
  ],
  "ignoreDeps": [],
  "golang": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Automatically merge minor and patch-level updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": false
    },
    {
      "description": "Go version updates",
      "matchManagers": ["gomod"],
      "matchDepTypes": ["golang"],
      "enabled": true
    }
  ]
}
